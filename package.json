{
  "name": "msgbot-multi-channel-push",
  "version": "1.0.0",
  "description": "多渠道推送系统 - 推特数据采集与微信小程序、Telegram、Discord推送",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "echo \"No build step required\" && exit 0",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "docker:build": "docker build -t msgbot-api .",
    "docker:run": "docker run -p 3000:3000 msgbot-api",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "twitter",
    "wechat",
    "telegram",
    "discord",
    "push",
    "bot",
    "social-media"
  ],
  "author": "MsgBot Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "redis": "^4.6.11",
    "bull": "^4.12.2",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "twitter-api-v2": "^1.15.2",
    "discord.js": "^14.14.1",
    "node-telegram-bot-api": "^0.64.0",
    "node-cron": "^3.0.3",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3",
    "ioredis-mock": "^8.9.0",
    "jest-junit": "^16.0.0",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}